{
  "name": "autospec",
  "version": "1.0.0",
  "description": "AutoSpec - From requirements to running code. AI-powered spec-driven development.",
  "type": "module",
  "bin": {
    "autospec": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --external @inquirer/prompts --external chalk --external commander --external fs-extra --external handlebars --external ora --external yaml",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "autospec",
    "spec-driven-development",
    "ai",
    "cli",
    "project-generator",
    "specifications",
    "multi-agent",
    "claude",
    "copilot"
  ],
  "author": "AutoSpec Team",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^5.5.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "ora": "^8.0.1",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/autospec.git"
  },
  "homepage": "https://github.com/user/autospec#readme"
}
